<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
  <!--Paprastas tipas-->
  <xs:simpleType name="IdNumber">
    <xs:restriction base="xs:string">
      <xs:length value="12" />
      <xs:pattern value="ID[0-9]{10}" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="Name">
    <xs:restriction base="xs:string">
      <xs:pattern value="([a-z\ ])*"/>
    </xs:restriction>
  </xs:simpleType>

  <!--Sarasas-->
  <xs:simpleType name="Workers">
    <xs:list itemType="IdNumber" />
  </xs:simpleType>

  <!--Paprastas turinys-->
  <xs:complexType name="Product">
    <xs:attribute name="name" type="Name" />
    <xs:attribute name="type" type="xs:string" />
    <xs:attribute name="producer" type="xs:string" />
    <xs:attribute name="price" type="xs:decimal" />
  </xs:complexType>

  <!--Sudėtingi tipai su paprastu turiniu-->
  <xs:complexType name="TimeStamped">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="madeOn" type="xs:date"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:complexType name="Discount">
    <xs:simpleContent>
      <xs:extension base="xs:integer">
        <xs:attribute name="validUntil" type="xs:date"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <!--išvesti apribojimu (restriction) iš jūsų (ne XML Schema) bazinio tipo-->
  <xs:complexType name="SmallDiscount">
    <xs:simpleContent>
      <xs:restriction base="Discount">
        <xs:maxInclusive value="30"/>
      </xs:restriction>
    </xs:simpleContent>
  </xs:complexType>

  <!--išvesti praplėtimu (extension) iš jūsų bazinio tipo-->
  <xs:complexType name="Expirable">
    <xs:simpleContent>
      <xs:extension base="TimeStamped">
        <xs:attribute name="expiresOn" type="xs:date"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>


  <!--Sudėtingi tipai su sudėtingu turiniu-->
  <xs:complexType name="SpecialSandwich">
    <xs:sequence>
      <xs:element name="Bun"/>
      <xs:element name="Meat" minOccurs="0"/>
      <xs:element name="Salad" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <!--išvesti apribojimu (restriction) iš jūsų bazinio tipo-->  
  <xs:complexType name="VeganSandwich">
    <xs:complexContent>
      <xs:restriction base="SpecialSandwich">
        <xs:sequence>
          <xs:element name="Bun"/>
          <xs:element name="Salad"/>
        </xs:sequence>
      </xs:restriction>
    </xs:complexContent>
  </xs:complexType>

  <!--išvesti praplėtimu (extension) iš jūsų bazinio tipo-->
  <xs:complexType name="SpecialSandwichTakeout">
    <xs:complexContent>
      <xs:extension base="SpecialSandwich">
        <xs:sequence>
          <xs:element name="Package"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>




