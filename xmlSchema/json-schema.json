{
    "$schema": "http://json-schema.org/draft-04/schema",
    "$id": "https://github.com/WarHatch/IT-XMLschema-2lab",
    "definitions": {
        "cost": {
            "type": "string",
            "pattern": "^[0-9]+.[0-9]{2}$"
        },
        "sauceNames": {
            "properties": {
                "name": {
                    "type": "string"
                }
            }
        },
        "sauce": {
            "allOf": [
                {
                    "$ref": "#/definitions/sauceNames"
                },
                {
                    "properties": {
                        "spices": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "required": [ "spices" ]
                }
            ]
        }
    },
    "title": "FoodShop",
    "type": "object",
    "properties": {
        "sales": {
            "type": "object",
            "properties": {
                "meatDiscount": {
                    "minimum": 1,
                    "maximum": 99,
                    "type": "number"
                }
            }
        },
        "order": {
            "type": "array",
            "minItems": 1,
            "additionalProperties": false,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "bun": {
                                "$ref": "#/definitions/cost"
                            },
                            "meat": {
                                "type": "object",
                                "properties": {
                                    "kind": {
                                        "type": "string",
                                        "enum": [
                                            "Pork",
                                            "Chicken",
                                            "Beef",
                                            1
                                        ]
                                    },
                                    "cost": { "$ref": "#/definitions/cost" }
                                }
                            },
                            "salad": {
                                "$ref": "#/definitions/cost"
                            },
                            "sauce": {
                                "$ref": "#/definitions/sauce"
                            }
                        },
                        "required": [ "bun", "salad", "sauce" ],
                        "additionalProperties": false,
                        "minItems": 1,
                        "uniqueItems": true
                    },
                    {
                        "type": "object",
                        "properties": {
                            "bun": {
                                "$ref": "#/definitions/cost"
                            },
                            "sausage": {
                                "$ref": "#/definitions/cost"
                            },
                            "sauce": {
                                "$ref": "#/definitions/sauce"
                            }
                        },
                        "required": [ "bun", "sausage", "sauce" ],
                        "additionalProperties": false,
                        "minItems": 1,
                        "uniqueItems": true
                    }
                ]
            }
        },
        "workers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "[a-zA-Z]"
                    },
                    "phoneNumber": {
                        "type": "string",
                        "pattern": "[0-9]{6}$"
                    }
                }
            },
            "uniqueItems": true
        },
        "supervisorPresent": {
            "type": "boolean"
        }
    },
    "required": [
        "sales",
        "order",
        "workers",
        "supervisorPresent"
    ]
}
