{
    "$schema": "http://json-schema.org/draft-04/schema",
    "$id": "https://github.com/WarHatch/IT-XMLschema-2lab",
    "definitions": {
        "cost": {
            "type": "string",
            "pattern": "^[0-9]+.[0-9]{2}$"
        },
        "sauces": {
            "properties": {
                "name": {
                    "type": "string"
                }
            }
        }
    },
    "title": "Shop",
    "type": "object",
    "properties": {
        "sales": {
            "type": "object",
            "properties": {
                "meatDiscount": {
                    "minimum": 1,
                    "maximum": 99,
                    "type": "number"
                }
            }
        },
        "sandwiches": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "bun": {
                        "$ref": "#/definitions/cost"
                    },
                    "meat": {
                        "type": "string",
                        "enum": [
                            "Pork",
                            "Chicken",
                            "Beef"
                        ]
                    },
                    "salad": {
                        "$ref": "#/definitions/cost"
                    },
                    "sauce": {
                        "allOf": [
                            {
                               "$ref": "#/definitions/sauces"
                            },
                            {
                                "properties": {
                                    "spices": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "required": [ "spices" ]
                            }
                        ]
                    }
                },
                "required": [ "bun", "salad", "sauce" ],
                "minItems": 1,
                "uniqueItems": true
            }
        },
        "workers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "[a-zA-Z]"
                    },
                    "phoneNumber": {
                        "type": "string",
                        "pattern": "[0-9]{6}$"
                    }
                }
            },
            "uniqueItems": true
        },
        "supervisorPresent": {
            "type": "boolean"
        }
    },
    "required": [
        "sales",
        "sandwiches",
        "workers",
        "supervisorPresent"
    ]
}
