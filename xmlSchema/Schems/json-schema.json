{
    "$schema": "http://json-schema.org/draft-04/schema",
    "$id": "https://github.com/WarHatch/IT-XMLschema-2lab",
    "title": "Shop",
    "type": "object",
    "properties": {
        "sales": {
            "type": "object",
            "properties": {
                "meatDiscount": {
                    "minimum": 1,
                    "maximum": 99,
                    "type": "number"
                }
            }
        },
        "sauces": {
            "properties": {
                "mustard": {
                    "type": "string"
                },
                "ketchup": {
                    "type": "string"
                }
            }
        },
        "sandwiches": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "bun": {
                        "type": "string",
                        "pattern": "^[0-9]+.[0-9]{2}$"
                    },
                    "meat": {
                        "type": "string",
                        "enum": [
                            "Pork",
                            "Chicken",
                            "Beef"
                        ]
                    },
                    "salad": {
                        "type": "string",
                        "pattern": "^[0-9]+.[0-9]{2}$"
                    },
                    "sauce": {
                        "anyOf": [
                            { "$ref": "#/properties/sauces/properties/ketchup" },
                            { "$ref": "#/properties/sauces/properties/mustard" },
                            {
                                "allOf": [
                                    { "$ref": "#/properties/sauces/properties/ketchup" },
                                    { "$ref": "#/properties/sauces/properties/mustard" },
                                    { "$ref": "#/properties/secretSpice" }
                                ]
                            }
                        ]
                    }
                },
                "required": [ "title", "storageType" ],
                "minItems": 1,
                "uniqueItems": true
            }
        },
        "workers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "[a-zA-Z]"
                    },
                    "phoneNumber": {
                        "type": "string",
                        "pattern": "^(\\(\\+?[0-9]{3}\\))?[0-9]{8}$"
                    }
                }
            },
            "uniqueItems": true
        },
        "secretSpice": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "supervisorPresent": {
            "type": "boolean"
        }
    },
    "required": [
        "sales",
        "sandwiches",
        "meats",
        "workers",
        "secretSpice",
        "supervisorPresent"
    ]
}